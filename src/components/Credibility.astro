---
const fundingSources = [
  { name: "Business Finland", logo: "/logos/business-finland.svg", height: "h-10" },
  { name: "EU Horizon", logo: "/logos/eu.svg", height: "h-10" },
  { name: "Finnvera", logo: "/logos/finnvera.svg", height: "h-6" },
  { name: "ELY Centre", logo: "/logos/ely.svg", height: "h-16" },
];

const partnerships = [
  {
    name: "Kasvu Open",
    role: "Growth Coach",
    logo: "/logos/kasvu-open.jpg",
    url: "https://kasvuopen.co/en/",
  },
  {
    name: "Business Tampere",
    role: "Official Partner",
    logo: "/logos/business-tampere.jpg",
    url: "https://businesstampere.com/en/",
  },
];
---

<section id="track-record" class="section-dark">
  <div class="section-container">
    <!-- Section header -->
    <div class="mb-12 text-center">
      <p class="text-sm font-semibold uppercase tracking-wider text-cyan-400">Track Record</p>
      <h2 class="mt-2 text-[2rem] font-bold text-white sm:text-[2.5rem]">
        Trusted by Finnish growth companies
      </h2>
    </div>

    <div class="flex flex-col items-center gap-12 lg:flex-row lg:justify-between lg:gap-8">

      <!-- Funding sources -->
      <div class="text-center lg:text-left">
        <p class="text-sm font-medium uppercase tracking-wider text-slate-400">
          Funding sources we navigate
        </p>
        <div class="mt-6 flex flex-wrap items-center justify-center gap-8 lg:justify-start">
          {
            fundingSources.map((source) => (
              <div class="flex items-center justify-center opacity-70 transition-all hover:opacity-100">
                <img
                  src={source.logo}
                  alt={source.name}
                  class={`${source.height} w-auto`}
                />
              </div>
            ))
          }
        </div>
      </div>

      <!-- Divider -->
      <div class="hidden h-20 w-px bg-slate-700 lg:block"></div>

      <!-- Partnerships -->
      <div class="text-center lg:text-left">
        <p class="text-sm font-medium uppercase tracking-wider text-slate-400">
          Official partnerships
        </p>
        <div class="mt-6 flex flex-wrap items-center justify-center gap-8 lg:justify-start">
          {
            partnerships.map((partner) => (
              <a
                href={partner.url}
                target="_blank"
                rel="noopener noreferrer"
                class="group flex items-center gap-3 opacity-70 transition-all hover:opacity-100"
              >
                <img
                  src={partner.logo}
                  alt={partner.name}
                  class="h-12 w-auto rounded"
                />
                <div class="hidden text-left sm:block">
                  <div class="text-sm font-medium text-white">{partner.name}</div>
                  <div class="text-xs text-slate-400">{partner.role}</div>
                </div>
              </a>
            ))
          }
        </div>
      </div>

    </div>
  </div>
</section>
