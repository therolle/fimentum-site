---
interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  title,
  subtitle = "Start building something amazing today.",
  ctaText = "Get Started",
  ctaHref = "#",
} = Astro.props;
---

<section class="bg-gradient-to-b from-gray-50 to-white px-4 py-24 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-4xl text-center">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl md:text-6xl">
      {title}
    </h1>
    <p class="mx-auto mt-6 max-w-2xl text-lg text-gray-600 sm:text-xl">
      {subtitle}
    </p>
    <div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
      <a
        href={ctaHref}
        class="rounded-lg bg-gray-900 px-8 py-3 text-base font-medium text-white transition-colors hover:bg-gray-800"
      >
        {ctaText}
      </a>
      <a
        href="#features"
        class="rounded-lg border border-gray-300 bg-white px-8 py-3 text-base font-medium text-gray-700 transition-colors hover:bg-gray-50"
      >
        Learn More
      </a>
    </div>
  </div>
</section>
