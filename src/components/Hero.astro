---
interface Props {
  title?: string;
  subtitle?: string;
  primaryCta?: {
    text: string;
    href: string;
  };
  secondaryCta?: {
    text: string;
    href: string;
  };
}

const {
  title = "Funding expertise that grows with you",
  subtitle = "Navigate the complex world of startup and growth funding with an experienced partner by your side. From Business Finland to EU programs, we help you secure the capital you need.",
  primaryCta = { text: "Book a Call", href: "#contact" },
  secondaryCta = { text: "See How We Help", href: "#services" },
} = Astro.props;

const stats = [
  { value: "â‚¬200M+", label: "Capital Raised" },
  { value: "1000+", label: "Projects" },
  { value: "25+", label: "Years Experience" },
];
---

<section class="gradient-hero relative min-h-screen overflow-hidden">
  <!-- Decorative elements -->
  <div class="pointer-events-none absolute inset-0 overflow-hidden">
    <div
      class="animate-float absolute -top-40 -right-40 h-80 w-80 rounded-full bg-indigo-500/10 blur-3xl"
    >
    </div>
    <div
      class="animate-float absolute top-1/2 -left-20 h-60 w-60 rounded-full bg-cyan-500/10 blur-3xl"
      style="animation-delay: 2s;"
    >
    </div>
    <div
      class="animate-float absolute bottom-20 right-1/4 h-40 w-40 rounded-full bg-violet-500/10 blur-3xl"
      style="animation-delay: 4s;"
    >
    </div>
  </div>

  <div class="relative mx-auto flex min-h-screen max-w-7xl flex-col justify-center px-4 py-24 sm:px-6 lg:px-8">
    <div class="max-w-4xl">
      <h1 class="animate-fade-in text-4xl font-bold tracking-tight text-white sm:text-5xl md:text-6xl lg:text-7xl">
        <span class="block">{title.split(" ").slice(0, 2).join(" ")}</span>
        <span class="gradient-text block">{title.split(" ").slice(2).join(" ")}</span>
      </h1>

      <p class="animate-fade-in delay-100 mt-6 max-w-2xl text-lg text-slate-300 sm:text-xl">
        {subtitle}
      </p>

      <div class="animate-fade-in delay-200 mt-10 flex flex-col gap-4 sm:flex-row">
        <a
          href={primaryCta.href}
          class="btn-gradient inline-flex items-center justify-center rounded-xl px-8 py-4 text-base font-semibold text-white transition-all hover:scale-[1.02]"
        >
          {primaryCta.text}
          <svg
            class="ml-2 h-5 w-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"
            />
          </svg>
        </a>
        <a
          href={secondaryCta.href}
          class="inline-flex items-center justify-center rounded-xl border border-slate-600 bg-transparent px-8 py-4 text-base font-semibold text-white transition-all hover:border-slate-500 hover:bg-white/5"
        >
          {secondaryCta.text}
        </a>
      </div>
    </div>

    <!-- Stats bar -->
    <div class="animate-fade-in delay-300 mt-20 grid grid-cols-1 gap-8 border-t border-slate-700/50 pt-12 sm:grid-cols-3">
      {
        stats.map((stat) => (
          <div class="text-center sm:text-left">
            <div class="gradient-text text-4xl font-bold sm:text-5xl">
              {stat.value}
            </div>
            <div class="mt-2 text-sm font-medium uppercase tracking-wider text-slate-400">
              {stat.label}
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
    <a href="#services" class="flex flex-col items-center text-slate-400 transition-colors hover:text-white">
      <span class="mb-2 text-xs uppercase tracking-wider">Scroll</span>
      <svg class="h-6 w-6 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>
