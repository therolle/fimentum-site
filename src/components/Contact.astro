---
interface Props {
  title?: string;
  subtitle?: string;
  email?: string;
  phone?: string;
  location?: string;
  calendlyUrl?: string;
}

const {
  title = "Let's Talk Funding",
  subtitle = "Ready to explore your funding options? Book a free consultation or reach out directly.",
  email = "tommi@fimentum.fi",
  phone = "+358 40 849 2106",
  location = "Tampere, Finland",
  calendlyUrl = "#", // Replace with actual Calendly URL
} = Astro.props;
---

<section id="contact" class="bg-white px-4 py-24 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="grid gap-12 lg:grid-cols-2 lg:gap-16">
      <!-- Left side - CTA and info -->
      <div>
        <h2 class="text-3xl font-bold text-slate-900 sm:text-4xl">
          {title}
        </h2>
        <p class="mt-4 text-lg text-slate-600">
          {subtitle}
        </p>

        <!-- Primary CTA - Book a call -->
        <div class="mt-8">
          <a
            href={calendlyUrl}
            class="btn-gradient inline-flex items-center justify-center rounded-xl px-8 py-4 text-base font-semibold text-white transition-all hover:scale-[1.02]"
          >
            <svg
              class="mr-2 h-5 w-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              />
            </svg>
            Book a Free Consultation
          </a>
        </div>

        <!-- Contact details -->
        <div class="mt-12 space-y-6">
          <div class="flex items-start">
            <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-indigo-100 text-indigo-600">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-slate-500">Email</p>
              <a
                href={`mailto:${email}`}
                class="text-lg text-slate-900 transition-colors hover:text-indigo-600"
              >
                {email}
              </a>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-indigo-100 text-indigo-600">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-slate-500">Phone</p>
              <a
                href={`tel:${phone.replace(/\s/g, "")}`}
                class="text-lg text-slate-900 transition-colors hover:text-indigo-600"
              >
                {phone}
              </a>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-indigo-100 text-indigo-600">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                />
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-slate-500">Location</p>
              <p class="text-lg text-slate-900">{location}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Right side - Contact form -->
      <div class="rounded-2xl border border-slate-200 bg-slate-50 p-8">
        <h3 class="text-lg font-semibold text-slate-900">Send a Message</h3>
        <p class="mt-1 text-sm text-slate-500">
          Prefer email? Fill out the form and we'll get back to you within 24 hours.
        </p>

        <form class="mt-6 space-y-6" action="#" method="POST">
          <div>
            <label for="name" class="block text-sm font-medium text-slate-700">
              Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="mt-1 block w-full rounded-lg border border-slate-300 px-4 py-3 text-slate-900 placeholder-slate-400 transition-colors focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500"
              placeholder="Your name"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-slate-700">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="mt-1 block w-full rounded-lg border border-slate-300 px-4 py-3 text-slate-900 placeholder-slate-400 transition-colors focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500"
              placeholder="you@company.com"
            />
          </div>

          <div>
            <label for="company" class="block text-sm font-medium text-slate-700">
              Company
            </label>
            <input
              type="text"
              id="company"
              name="company"
              class="mt-1 block w-full rounded-lg border border-slate-300 px-4 py-3 text-slate-900 placeholder-slate-400 transition-colors focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500"
              placeholder="Your company name"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-slate-700">
              Message
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="mt-1 block w-full rounded-lg border border-slate-300 px-4 py-3 text-slate-900 placeholder-slate-400 transition-colors focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500"
              placeholder="Tell us about your company and funding needs..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full rounded-lg border border-slate-300 bg-white px-8 py-3 font-medium text-slate-900 transition-all hover:border-indigo-300 hover:bg-indigo-50"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
