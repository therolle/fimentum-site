---
interface Props {
  title?: string;
  subtitle?: string;
  email?: string;
  phone?: string;
  location?: string;
  calendlyUrl?: string;
}

const {
  title = "Let's Talk Funding",
  subtitle = "Ready to explore your funding options? Book a free consultation or reach out directly.",
  email = "tommi@fimentum.fi",
  phone = "+358 40 849 2106",
  location = "Tampere, Finland",
  calendlyUrl = "#", // Replace with actual Calendly URL
} = Astro.props;
---

<section id="contact" class="section-light-alt">
  <div class="section-container">
    <div class="mx-auto max-w-2xl text-center">
      <p class="text-sm font-semibold uppercase tracking-wider text-primary-600">Contact</p>
      <h2 class="mt-2 text-[2rem] font-bold text-slate-800 sm:text-[2.5rem]">
        {title}
      </h2>
      <p class="mt-4 text-lg text-slate-600">
        {subtitle}
      </p>

      <!-- Contact details -->
      <div class="mt-10 flex flex-col items-center justify-center gap-6 sm:flex-row sm:gap-10">
        <a
          href={`mailto:${email}`}
          class="flex items-center gap-2 text-slate-600 transition-colors hover:text-primary-600"
        >
          <svg class="h-5 w-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            />
          </svg>
          <span class="text-lg">{email}</span>
        </a>

        <a
          href={`tel:${phone.replace(/\s/g, "")}`}
          class="flex items-center gap-2 text-slate-600 transition-colors hover:text-primary-600"
        >
          <svg class="h-5 w-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            />
          </svg>
          <span class="text-lg">{phone}</span>
        </a>

        <div class="flex items-center gap-2 text-slate-600">
          <svg class="h-5 w-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
            />
          </svg>
          <span class="text-lg">{location}</span>
        </div>
      </div>
    </div>
  </div>
</section>
