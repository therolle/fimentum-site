---
interface Step {
  number: string;
  title: string;
  description: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  steps?: Step[];
}

const {
  title = "How We Work Together",
  subtitle = "A straightforward process designed to get you funded efficiently.",
  steps = [
    {
      number: "01",
      title: "Discovery Call",
      description:
        "We start with a free consultation to understand your business, growth plans, and funding needs. No commitment required.",
    },
    {
      number: "02",
      title: "Funding Roadmap",
      description:
        "Based on your situation, we create a tailored funding strategy - identifying the best mix of grants, loans, and equity.",
    },
    {
      number: "03",
      title: "Application & Execution",
      description:
        "We handle the heavy lifting - preparing applications, coordinating with funders, and managing the entire process.",
    },
    {
      number: "04",
      title: "Ongoing Support",
      description:
        "After funding is secured, we help with reporting, compliance, and planning for your next funding round.",
    },
  ],
} = Astro.props;
---

<section id="process" class="bg-slate-50 px-4 py-24 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-slate-900 sm:text-4xl">
        {title}
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-slate-600">
        {subtitle}
      </p>
    </div>

    <div class="mt-16">
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
        {
          steps.map((step, index) => (
            <div class="relative">
              {/* Connector line (hidden on last item and mobile) */}
              {index < steps.length - 1 && (
                <div class="absolute left-1/2 top-8 hidden h-px w-full bg-gradient-to-r from-indigo-300 to-cyan-300 lg:block" />
              )}

              <div class="relative rounded-2xl bg-white p-6 shadow-sm">
                {/* Step number */}
                <div class="mb-4 flex h-16 w-16 items-center justify-center rounded-xl bg-gradient-to-br from-indigo-500 to-cyan-500 text-2xl font-bold text-white">
                  {step.number}
                </div>

                <h3 class="text-lg font-semibold text-slate-900">
                  {step.title}
                </h3>
                <p class="mt-2 text-slate-600">{step.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    {/* CTA */}
    <div class="mt-16 text-center">
      <a
        href="#contact"
        class="btn-gradient inline-flex items-center justify-center rounded-xl px-8 py-4 text-base font-semibold text-white transition-all hover:scale-[1.02]"
      >
        Start with a Free Consultation
        <svg
          class="ml-2 h-5 w-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"
          />
        </svg>
      </a>
    </div>
  </div>
</section>
