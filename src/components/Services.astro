---
interface Service {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  services?: Service[];
}

const {
  title = "How We Help",
  subtitle = "From early-stage funding strategy to complex EU applications, we provide hands-on support at every step.",
  services = [
    {
      title: "Funding Strategy",
      description:
        "We analyze your business and map out the optimal funding mix - grants, loans, and equity - tailored to your growth stage and goals.",
      icon: "strategy",
    },
    {
      title: "Grant Applications",
      description:
        "Expert preparation of Business Finland, ELY, and EU Horizon applications. We know what evaluators look for.",
      icon: "document",
    },
    {
      title: "Private Funding",
      description:
        "Support for VC rounds, angel investments, and bank financing. From pitch deck to term sheet negotiations.",
      icon: "chart",
    },
    {
      title: "Ongoing Management",
      description:
        "Project administration, reporting, and compliance so you can focus on building your business.",
      icon: "cog",
    },
  ],
} = Astro.props;

