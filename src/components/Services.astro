---
const services = [
  {
    title: "Funding Strategy",
    subtitle: "Map your route",
    description:
      "We audit your business and identify every funding opportunity available - grants, loans, equity. You get a clear roadmap with realistic timelines.",
    image: "/images/services/strategy.png",
    placeholder: "Finnish landscape aerial view with winding roads",
    stats: { value: "â‚¬200M+", label: "mapped for clients" },
  },
  {
    title: "Grant Applications",
    subtitle: "We handle the paperwork",
    description:
      "Business Finland, ELY, EU Horizon, EIC Accelerator - we've written 1000+ successful applications. We know exactly what evaluators look for.",
    image: "/images/services/grants.png",
    placeholder: "Close-up of funding application documents",
    stats: { value: "1000+", label: "applications written" },
  },
  {
    title: "Private Funding",
    subtitle: "Tell your story",
    description:
      "From pitch deck to term sheet. We help you craft the narrative that resonates with Nordic and European investors.",
    image: "/images/services/private.png",
    placeholder: "Modern meeting room or pitch setting",
    stats: { value: "50+", label: "VC rounds supported" },
  },
  {
    title: "Ongoing Support",
    subtitle: "Stay compliant",
    description:
      "Post-funding reporting, compliance, audit preparation. We handle the administrative burden so you can focus on building.",
    image: "/images/services/support.png",
    placeholder: "Clean workspace with analytics dashboard",
    stats: { value: "100%", label: "compliance rate" },
  },
];
---

<section id="services" class="section-light-alt overflow-hidden">
  <div class="section-container">
    <!-- Header -->
    <div class="max-w-3xl">
      <p class="text-sm font-semibold uppercase tracking-wider text-primary-600">Services</p>
      <h2 class="mt-2 text-[2rem] font-bold text-slate-800 sm:text-[2.5rem]">
        Full-service funding support
      </h2>
      <p class="mt-4 text-lg text-slate-600">
        From first strategy call to funded and beyond.
      </p>
    </div>
  </div>

  <!-- Services - Full width alternating layout -->
  <div class="mt-16 space-y-0">
    {
      services.map((service, index) => (
        <div class={index % 2 === 0 ? 'bg-slate-50' : 'bg-white'}>
          <div class="section-container">
            <div class={`grid items-center gap-8 py-16 lg:grid-cols-2 lg:gap-16 ${index % 2 === 1 ? 'lg:grid-flow-dense' : ''}`}>

              <!-- Content -->
              <div class={index % 2 === 1 ? 'lg:col-start-2' : ''}>
                <div class="flex items-center gap-3">
                  <span class="gradient-badge h-8 w-8 text-sm font-bold">
                    {String(index + 1).padStart(2, '0')}
                  </span>
                  <span class="text-sm font-medium uppercase tracking-wider text-slate-500">
                    {service.subtitle}
                  </span>
                </div>

                <h3 class="mt-4 text-[1.5rem] font-semibold text-slate-800">
                  {service.title}
                </h3>

                <p class="mt-4 text-lg text-slate-600">
                  {service.description}
                </p>

                <!-- Stat -->
                <div class="mt-8">
                  <span class="gradient-text text-4xl font-bold">{service.stats.value}</span>
                  <span class="ml-2 text-sm text-slate-500">{service.stats.label}</span>
                </div>
              </div>

              <!-- Image -->
              <div class={`relative ${index % 2 === 1 ? 'lg:col-start-1' : ''}`}>
                <div class="relative aspect-[4/3] overflow-hidden rounded-2xl bg-slate-200 shadow-lg">
                  <img
                    src={service.image}
                    alt={service.title}
                    class="h-full w-full object-cover"
                    loading="lazy"
                  />
                </div>

                <!-- Decorative gradient blob -->
                <div class={`blur-orb absolute -z-10 h-72 w-72 ${index % 2 === 0 ? 'blur-orb-indigo -bottom-10 -right-10' : 'blur-orb-cyan -bottom-10 -left-10'}`} />
              </div>

            </div>
          </div>
        </div>
      ))
    }
  </div>

  <!-- CTA -->
  <div class="bg-white">
    <div class="section-container py-16 text-center">
      <p class="text-lg text-slate-600">Not sure where to start?</p>
      <h3 class="mt-2 text-[1.5rem] font-semibold text-slate-800">Book a free strategy call</h3>
      <p class="mt-2 text-slate-600">30 minutes. No commitment. We'll map out your options.</p>
      <a href="#contact" class="btn-primary mt-6 inline-flex">
        Schedule a call
        <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
