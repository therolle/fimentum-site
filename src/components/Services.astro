---

<section id="services" class="bg-slate-50 px-4 py-24 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-slate-900 sm:text-4xl">
        {title}
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-slate-600">
        {subtitle}
      </p>
    </div>

    <div class="mt-16 grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {
        services.map((service, index) => (
          <div
            class="group rounded-2xl border border-slate-200 bg-white p-8 shadow-sm transition-all duration-300 hover:-translate-y-1 hover:border-indigo-200 hover:shadow-lg"
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-br from-indigo-500 to-cyan-500 text-white">
              <svg
                class="h-6 w-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                set:html={icons[service.icon]}
              />
            </div>
            <h3 class="text-lg font-semibold text-slate-900">{service.title}</h3>
            <p class="mt-2 text-slate-600">{service.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
