---
interface Props {
  name?: string;
  title?: string;
  bio?: string[];
  imageUrl?: string;
}

const {
  name = "Tommi Pajala",
  title = "Founder & CEO",
  bio = [
    "I've spent more than 25 years in startups and growth companies — first as a founder, and for the past 13 years helping others secure funding for innovation and expansion.",
    "I've raised over €200M in funding and written more than 1000 successful applications for companies across industries — from software and AI to medtech, fintech, robotics, energy, maritime, and beyond.",
    "I started Fimentum to be the kind of advisor I wish I'd had as a founder: experienced, straightforward, and genuinely invested in my clients' success.",
  ],
  imageUrl = "https://media.licdn.com/dms/image/v2/D4D03AQHwtwFD6lQdcA/profile-displayphoto-shrink_200_200/B4DZStgladHYAc-/0/1738077788295?e=2147483647&v=beta&t=L_DPes2EJxPn5zY1tKQjDjwhLrWB_VaC_b-4bksfFhY",
} = Astro.props;

const credentials = [
  "25+ years in startups and growth companies",
  "€200M+ raised for client companies",
  "1000+ successful funding applications",
  "Kasvu Open growth coach",
];
---

<section id="about" class="section-light-alt">
  <div class="section-container">
    <div class="grid items-start gap-12 lg:grid-cols-2 lg:gap-16">
      <!-- Image side -->
      <div class="flex justify-center">
        <div class="relative max-w-sm">
          <div class="overflow-hidden rounded-2xl border border-slate-200 shadow-lg">
            <img
              src={imageUrl}
              alt={name}
              class="h-auto w-full"
              loading="lazy"
            />
          </div>
          <!-- Decorative element -->
          <div class="absolute -bottom-4 -right-4 -z-10 h-full w-full rounded-2xl bg-gradient-to-br from-indigo-500 to-cyan-500 opacity-20"></div>
        </div>
      </div>

      <!-- Content side -->
      <div>
        <span class="text-sm font-semibold uppercase tracking-wider text-primary-600">
          About
        </span>
        <h2 class="mt-2 text-[2rem] font-bold text-slate-800 sm:text-[2.5rem]">
          {name}
        </h2>
        <p class="mt-1 text-lg text-slate-500">{title}</p>

        <div class="mt-6 space-y-4">
          {bio.map((paragraph) => (
            <p class="text-slate-600">{paragraph}</p>
          ))}
        </div>

        <!-- Credentials -->
        <ul class="mt-8 space-y-3">
          {credentials.map((credential) => (
            <li class="flex items-center text-slate-600">
              <svg
                class="mr-3 h-5 w-5 flex-shrink-0 text-indigo-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"
                />
              </svg>
              {credential}
            </li>
          ))}
        </ul>

        <!-- LinkedIn link -->
        <a
          href="https://www.linkedin.com/in/tommi-pajala/"
          target="_blank"
          rel="noopener noreferrer"
          class="mt-8 inline-flex items-center text-indigo-600 transition-colors hover:text-indigo-500"
        >
          <svg class="mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          Connect on LinkedIn
        </a>
      </div>
    </div>
  </div>
</section>
