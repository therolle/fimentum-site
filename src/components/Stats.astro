---
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Trusted by Finnish Growth Companies",
  subtitle = "We've helped hundreds of companies navigate the funding landscape and secure the capital they need to grow.",
} = Astro.props;

const partners = [
  { name: "Business Finland", logo: "business-finland" },
  { name: "EU Horizon", logo: "eu" },
  { name: "Finnvera", logo: "finnvera" },
  { name: "ELY Centre", logo: "ely" },
];
---

<section id="track-record" class="gradient-hero relative overflow-hidden px-4 py-24 sm:px-6 lg:px-8">
  <!-- Decorative elements -->
  <div class="pointer-events-none absolute inset-0 overflow-hidden">
    <div class="absolute top-0 right-0 h-96 w-96 rounded-full bg-indigo-500/5 blur-3xl"></div>
    <div class="absolute bottom-0 left-0 h-96 w-96 rounded-full bg-cyan-500/5 blur-3xl"></div>
  </div>

  <div class="relative mx-auto max-w-7xl">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-white sm:text-4xl">
        {title}
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-slate-300">
        {subtitle}
      </p>
    </div>

    <!-- Funding sources -->
    <div class="mt-16">
      <p class="mb-8 text-center text-sm font-medium uppercase tracking-wider text-slate-400">
        Funding sources we work with
      </p>
      <div class="flex flex-wrap items-center justify-center gap-8 md:gap-16">
        {
          partners.map((partner) => (
            <div class="flex items-center justify-center opacity-60 grayscale transition-all hover:opacity-100 hover:grayscale-0">
              <span class="text-lg font-semibold text-white">{partner.name}</span>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Additional credibility -->
    <div class="mt-20 rounded-2xl border border-slate-700/50 bg-slate-800/50 p-8 backdrop-blur-sm">
      <div class="grid gap-8 md:grid-cols-2">
        <div>
          <h3 class="text-xl font-semibold text-white">Kasvu Open Coach</h3>
          <p class="mt-2 text-slate-300">
            Active coach at Finland's premier growth accelerator, helping the country's most promising companies scale.
          </p>
        </div>
        <div>
          <h3 class="text-xl font-semibold text-white">Business Tampere Partner</h3>
          <p class="mt-2 text-slate-300">
            Providing funding advisory services through the Tampere region's official business development organization.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
