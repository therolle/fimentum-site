---
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Trusted by Finnish Growth Companies",
  subtitle = "We've helped hundreds of companies navigate the funding landscape and secure the capital they need to grow.",
} = Astro.props;

const partners = [
  { name: "Business Finland", logo: "/logos/business-finland.svg", height: "h-10" },
  { name: "EU Horizon", logo: "/logos/eu.svg", height: "h-10" },
  { name: "Finnvera", logo: "/logos/finnvera.svg", height: "h-6" },
  { name: "ELY Centre", logo: "/logos/ely.svg", height: "h-16" },
];
---

<section id="track-record" class="gradient-hero relative overflow-hidden px-4 py-24 sm:px-6 lg:px-8">
  <!-- Decorative elements -->
  <div class="pointer-events-none absolute inset-0 overflow-hidden">
    <div class="absolute top-0 right-0 h-96 w-96 rounded-full bg-indigo-500/5 blur-3xl"></div>
    <div class="absolute bottom-0 left-0 h-96 w-96 rounded-full bg-cyan-500/5 blur-3xl"></div>
  </div>

  <div class="relative mx-auto max-w-7xl">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-white sm:text-4xl">
        {title}
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-slate-300">
        {subtitle}
      </p>
    </div>

    <!-- Funding sources -->
    <div class="mt-16">
      <p class="mb-8 text-center text-sm font-medium uppercase tracking-wider text-slate-400">
        Funding sources we work with
      </p>
      <div class="flex flex-wrap items-center justify-center gap-8 md:gap-16">
        {
          partners.map((partner) => (
            <div class="flex items-center justify-center opacity-70 transition-all hover:opacity-100">
              <img
                src={partner.logo}
                alt={partner.name}
                class={`${partner.height} w-auto`}
              />
            </div>
          ))
        }
      </div>
    </div>

  </div>
</section>

<!-- Partnerships Section - Light background -->
<section class="bg-white px-4 py-20 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <p class="mb-12 text-center text-sm font-medium uppercase tracking-wider text-slate-500">
      Official Partner & Coach
    </p>

    <div class="grid gap-12 md:grid-cols-2">
      <!-- Kasvu Open -->
      <div class="flex flex-col items-center text-center">
        <a href="https://kasvuopen.co/en/" target="_blank" rel="noopener noreferrer" class="transition-opacity hover:opacity-80">
          <img
            src="/logos/kasvu-open.jpg"
            alt="Kasvu Open"
            class="h-20 w-auto"
          />
        </a>
        <h3 class="mt-6 text-xl font-semibold text-slate-900">Kasvu Open Coach</h3>
        <p class="mt-3 max-w-sm text-slate-600">
          Active coach at Finland's premier growth accelerator, helping the country's most promising companies scale internationally.
        </p>
      </div>

      <!-- Business Tampere -->
      <div class="flex flex-col items-center text-center">
        <a href="https://businesstampere.com/en/" target="_blank" rel="noopener noreferrer" class="transition-opacity hover:opacity-80">
          <img
            src="/logos/business-tampere.jpg"
            alt="Business Tampere"
            class="h-20 w-auto"
          />
        </a>
        <h3 class="mt-6 text-xl font-semibold text-slate-900">Business Tampere Partner</h3>
        <p class="mt-3 max-w-sm text-slate-600">
          Providing funding advisory services through the Tampere region's official business development organization.
        </p>
      </div>
    </div>
  </div>
</section>
